using System;

namespace StringInterpolationExample
{
    internal class Program
    {
        private static void Main(string[] args)
        {
            var firstName = "John";
            var lastName = "Doe";
            
            var number = 123;
        
            var price = 123.45M;
        
            var width = 10;
            var height = 20;
            var area = width * height;
        
            var pi = Math.PI;
        
            Console.WriteLine($"First Name: {firstName}, Last Name: {lastName}");
            Console.WriteLine($"Padded Number: {number:D5}");
            Console.WriteLine($"Formatted Price: {price:C}");
            Console.WriteLine($"Area: {area} sq ft.");
            Console.WriteLine(@"\{curly brace\}");
            Console.WriteLine($"\nHi!\nHowdy partner!");
            Console.WriteLine($"{pi:0.####}");
        }
    }
}